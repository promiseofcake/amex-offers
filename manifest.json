{
    "manifest_version": 3,
    "name": "Amex Offers",
    "description": "Automatically add available Amex Offers to your Account",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "64": "images/icon-64.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": "amex_offers_extension.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}
